
{% macro newCard(post, class = 'w-full', cardClass = 'yestet', element = 'div', headingElement = 'h2') %}
<{{ element }} class="{{ class }}">
  <div class="{{ cardClass }}">
    <{{ headingElement }}>
      <a href="{{ post.url | url }}">
        <span>{{ post.data.title }}</span>
      </a>
    </{{ headingElement }}>
    
  </div>
</{{ element }}>
{% endmacro %}